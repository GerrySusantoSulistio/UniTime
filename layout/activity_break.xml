<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_unitime">

    <TextView
        android:id="@+id/userCurrencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startBreakButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_currency"
        android:text="0"
        android:paddingStart="48dp"
        android:paddingTop="12dp"
        android:textColor="@color/green"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/back_icon_1"/>

    <SeekBar
        android:id="@+id/breakSeekBar"
        android:layout_width="313dp"
        android:layout_height="28dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="48dp"
        android:max="120"
        android:thumbTint="#EBDAC8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/breakTimerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="124dp"
        android:fontFamily="@font/exo_semibold"
        android:text="00:00"
        android:textColor="@color/cream"
        android:textSize="56sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startBreakButton"
        android:layout_width="105dp"
        android:layout_height="53dp"
        android:layout_below="@+id/breakTimerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="152dp"
        android:background="@drawable/rounded_button_background"
        android:fontFamily="@font/roboto"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breakSeekBar" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/roboto"
        android:text="Time To Break"
        android:textAlignment="center"
        android:textColor="@color/cream"
        android:textSize="32sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>